{% extends 'master' %}

{% block content %}
  <div>
    <a href="/projects/create" class="btn btn-success">
      New Project
    </a>
    <table class="table">
      <thead>
        <tr>
          <td>Name</td>
          <td>Description</td>
        </tr>
      </thead>
      {% for project in projects %}
        <tr>
          <td>{{ project.name }}</td>
          <td>{{ project.description }}</td>
          <td>
            {{ form.open({action: 'ProjectController.destroy', method: 'DELETE', params: { id: project.id } }) }}
            <div class='btn-group'>
              {{ csrfField }}
              <a href="/projects/{{ project.id }}" class="btn btn-info">
                Show
              </a>
              <a href="/projects/{{ project.id }}/edit" class="btn btn-warning">
                Edit
              </a>
              {{ form.submit('Delete', 'delete', { class: 'btn btn-danger' }) }}
            <div>
            {{ form.close() }}
          </td>
        </tr>
      {% endfor %}
    </table>
  </div>
{% endblock %}
